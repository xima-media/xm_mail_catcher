{
  "compilerOptions": {
    "target": "es2017",
    "lib": [
      "dom",
      "scripthost",
      "es2017",
      "es2018",
      "es2019"
    ],
    "module": "amd",
    "sourceMap": false,
    "removeComments": false,
    "pretty": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "alwaysStrict": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "paths": {
      "TYPO3/CMS/XmMailCatcher/*": [
        "Resources/Private/TypeScript/*",
        "Resources/Public/JavaScript/*"
      ],
      "TYPO3/CMS/Backend/*": [
        "typo3_src/TypeScript/backend/Resources/Public/TypeScript/*"
      ],
      "TYPO3/CMS/Core/*": [
        "typo3_src/TypeScript/core/Resources/Public/TypeScript/*"
      ]
    },
    "typeRoots": [
      "node_modules/@types",
      "types"
    ],
    "outDir": "Resources/Public/JavaScript"
  },
  "include": [
    "Resources/Private/TypeScript/*"
  ],
  "exclude": [
    "node_modules",
    "Configuration",
    "typo3_src"
  ]
}
